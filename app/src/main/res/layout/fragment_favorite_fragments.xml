<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.favorite.FavoriteFragments">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favCharacterRv"
        android:background="@color/backgroundColor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/isEmptyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_character_msg"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/favCharacterRv"
        app:layout_constraintEnd_toEndOf="@+id/favCharacterRv"
        app:layout_constraintStart_toStartOf="@+id/favCharacterRv"
        app:layout_constraintTop_toTopOf="@+id/favCharacterRv" />

</androidx.constraintlayout.widget.ConstraintLayout>